          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnDetalle" maxWidth="1.7976931348623157E308" minHeight="30.0" mnemonicParsing="false" onAction="#detalleEvent" style="-fx-font-size: 15;" styleClass="btnsAgregar" stylesheets="@sources/btnStyle.css" text="Ver Detalle" />
